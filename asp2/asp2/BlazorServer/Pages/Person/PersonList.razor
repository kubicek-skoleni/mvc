@page "/person/list"
@using Data.Model

@inject PersonsDbContext db

<h3>Seznam osob</h3>


<div class="m-2">
    <a class="btn-info btn" href="/person/add">Nová..</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Jméno</th>
            <th scope="col">Příjmení</th>
            <th scope="col">Email</th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Persons)
        {
            <tr>
                <td>
                    @person.Id
                </td>
                <td>
                    @person.FirstName
                </td>
                <td>
                    @person.LastName
                </td>
                <td>
                    @person.Email
                </td>
                <td>
                    <a class="btn-info btn" href="/person/edit/@person.Id">Editovat</a>
                    <a class="btn-info btn" href="/person/detail/@person.Id">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@code {
    List<Persons> Persons = new List<Persons>();

    protected override void OnInitialized()
    {
        Persons = db.Persons.Take(50).ToList();
    }
}
