@model List<Person>

@{
    string search = ViewBag.Search ?? "";
}

<h3>Výsledek hledání podle emailu:</h3>
@* pozor na xss zranitelnost ;) *@
<div>hledaný výraz: <mark>@Html.Raw(search)</mark></div>
<table class="table table-striped">
    <thead>
        <tr>
        <th>
            jméno
        </th>
        <th>
            příjmení
        </th>
        <th>
            email
        </th>
        </tr>
    </thead>
    @foreach (var person in Model)
    {   
        <tr>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.LastName
            </td>
            <td>
                @person.Email
            </td>
        </tr>
    }
</table>


<a asp-action="Search">Nové hledání</a>