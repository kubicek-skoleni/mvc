@model List<Person>

@{
    string search = ViewBag.Search ?? "";
}

<h3>Výsledek hledání podle emailu:</h3>
<div>hledaný výraz: @search</div>
<table class="table table-striped">
    <tr>
        <td>
            jméno
        </td>
        <td>
            příjmení
        </td>
        <td>
            email
        </td>
    </tr>
    @foreach (var person in Model)
    {   
        <tr>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.LastName
            </td>
            <td>
                @person.Email
            </td>
        </tr>
    }
</table>


<a asp-action="Search">Nové hledání</a>