@model Person

@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName} - detail";
}

<div class="card card-body">
    <p>@Model.FirstName</p>
    <p>@Model.LastName</p>
    <p>@Model.Email</p>
    <p>@Model.DateOfBirth.ToShortDateString()</p>
</div>

<div class="card card-body">
    <div class="card-title">
        <h5>Adresa:</h5>
    </div>
    <p>@Model?.Address?.Street</p>
    <p>@Model?.Address?.City</p>
    <p>@Model?.Address?.ZipCode</p>
</div>

@foreach(var contract in Model.Constracts)
{
    <div>@contract.Name - @contract.Number - @contract.Signed - @contract.IsActive</div>
}